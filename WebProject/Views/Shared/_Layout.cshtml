<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            @* <a class="navbar-brand" href="#"><img src="~/Images/logo.jpg" width="100px" alt="BGM_logo" /></a> *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active text-dark" aria-current="page" href="#">Home</a>
                    </li>
@*                     <li class="nav-item">
                        <a class="nav-link" href="#">Link</a>
                    </li> *@
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Category
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Books</a></li>
                            <li><a class="dropdown-item" href="#">Games</a></li>
                            @* <li><hr class="dropdown-divider"></li> *@
                            <li><a class="dropdown-item" href="#">Movies</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="d-flex" role="search" id="navBarSearchForm">
                    <input class="form-control me-2" type="search" placeholder="Search Books, Games, Movies" aria-label="Search">
                    <button class="btn" type="submit"><i class="bi bi-search"></i></button> @* Need to Modify *@
                    @* <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button> *@
                </form>
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <button class="btn"><i class="bi bi-heart"></i></button>
                    </li>
                    <li class="nav-item">
                        <button class="btn"><i class="bi bi-cart"></i></button>
                    </li>                   
                    <li class="nav-item">
                        <button class="btn" onclick="window.location.href = '/Login/LoginPage'"><i class="bi bi-person"></i></button>                   
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-4">
        <div class="container">
            <div class="row">
                <div class="col-6 col-md-2 mb-3">
                    <h5>Account</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">My Account</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Login</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Register</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Cart</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Wishlist</a></li>
                    </ul>
                </div>

                <div class="col-6 col-md-2 mb-3">
                    <h5>Get to Know Us</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">About Us</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Careers</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Privacy Policy</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Terms of Use</a></li>
                        @* <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body-secondary">About</a></li> *@
                    </ul>
                </div>

                <div class="col-6 col-md-2 mb-3">
                    <h5>Customer Care</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Help Center</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">How to Buy</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Shipping & Delivery</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">How to Return</a></li>
                        <li class="nav-item mb-2"><a href="#" class="nav-link p-0 text-body">Contact Us</a></li>
                    </ul>
                </div>

                <div class="col-md-5 offset-md-1 mb-3">
                    <form>
                        <h5>Subscribe to our newsletter</h5>
                        <p>Monthly digest of what's new and exciting from us.</p>
                        <div class="d-flex flex-column flex-sm-row w-100 gap-2">
                            <label for="newsletter1" class="visually-hidden">Email address</label>
                            <input id="newsletter1" type="text" class="form-control" placeholder="Email address">
                            <button class="btn btn-dark" type="button">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="d-flex flex-column flex-sm-row justify-content-between py-4 my-4 border-top">
                <p>© 2024   BGM Company, Inc. All rights reserved.</p>
                <ul class="list-unstyled d-flex">
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><i class="bi bi-instagram h5"></i></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><i class="bi bi-twitter-x h5"></i></a></li>
                    <li class="ms-3"><a class="link-body-emphasis" href="#"><i class="bi bi-linkedin h5"></i></a></li>
                </ul>
            </div>
            @* &copy; 2024 - WebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> *@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
